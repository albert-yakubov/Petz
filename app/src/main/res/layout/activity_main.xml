<?xml version="1.0" encoding="utf-8"?>

<LinearLayout

        xmlns:android="http://schemas.android.com/apk/res/android"

        xmlns:tools="http://schemas.android.com/tools"

        xmlns:app="http://schemas.android.com/apk/res-auto"

        android:layout_width="match_parent"

        android:layout_height="wrap_content"

        android:orientation="vertical"

        tools:context=".MainActivity">



    <TextView

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:textSize="50sp"

            android:layout_gravity="center"

            android:text="Pets"/>

    <TextView

            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:textSize="40sp"

            android:textAlignment="center"

            android:textColor="@color/colorAccent"

            android:text="Farm Life Involves Lots of Pets"/>



    <ScrollView

            android:layout_width="match_parent"

            android:layout_height="match_parent">



        <LinearLayout

                android:layout_width="match_parent"

                android:orientation="vertical"

                android:layout_height="match_parent">



            <TextView

                    android:layout_width="match_parent"

                    android:textSize="30sp"

                    android:text="Draft Horses"

                    android:textAlignment="center"

                    android:layout_height="wrap_content"/>

            <TextView

                    android:textSize="30sp"

                    android:text="Ponies"

                    android:textAlignment="center"

                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"/>

            <TextView

                    android:layout_width="match_parent"

                    android:textSize="30sp"

                    android:text="Terriers"

                    android:textAlignment="center"

                    android:layout_height="wrap_content"/>

            <TextView

                    android:textSize="30sp"

                    android:textAlignment="center"

                    android:text="Pug(pig looking dog)"

                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"/>

            <TextView

                    android:layout_width="match_parent"

                    android:textSize="30sp"

                    android:text="Guana Pigs"

                    android:textAlignment="center"

                    android:layout_height="wrap_content"/>

            <TextView

                    android:textSize="30sp"

                    android:text="Pitbull"

                    android:textAlignment="center"

                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"/>

            <TextView

                    android:layout_width="match_parent"

                    android:textSize="30sp"

                    android:text="Rotweiler"

                    android:textAlignment="center"

                    android:layout_height="wrap_content"/>

            <TextView

                    android:textSize="30sp"

                    android:text="5 Barn Cats"

                    android:textAlignment="center"

                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"/>

            <TextView

                    android:layout_width="match_parent"

                    android:textSize="30sp"

                    android:textAlignment="center"

                    android:text="3 House Cats"

                    android:layout_height="wrap_content"/>

            <TextView

                    android:textSize="30sp"

                    android:textAlignment="center"

                    android:text="1 Show Sheep"

                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"/>





        </LinearLayout>

    </ScrollView>





</LinearLayout>